<body>

<div class="tech-dots"></div>

<div class="container">
  <h2>⚛ Quantum Diffraction Lab</h2>
  <div class="subtitle">[ WAVE INTERFERENCE SIMULATION SYSTEM ]</div>

  <div class="mode-selector">
    <button class="mode-btn active" onclick="setMode('single')">
      <span>◈ Single Slit</span>
    </button>
    <button class="mode-btn" onclick="setMode('double')">
      <span>◈ Double Slit</span>
    </button>
  </div>

  <div class="controls">
    <div class="control-group">
      <label>◉ Wavelength λ (m)</label>
      <input type="number" id="lambda" value="5e-7" step="1e-9">
      <div class="info">// Visible: 400-700 nm</div>
    </div>

    <div class="control-group" id="singleSlitA">
      <label>◉ Slit Width a (m)</label>
      <input type="number" id="a" value="0.0001" step="1e-6">
      <div class="info">// Range: 0.01-1 mm</div>
    </div>

    <div class="control-group hidden" id="doubleSlitA">
      <label>◉ Slit Width a (m)</label>
      <input type="number" id="a_double" value="0.00005" step="1e-6">
      <div class="info">// Each slit width</div>
    </div>

    <div class="control-group hidden" id="slitSeparation">
      <label>◉ Separation d (m)</label>
      <input type="number" id="d" value="0.0003" step="1e-6">
      <div class="info">// Center distance</div>
    </div>

    <div class="control-group">
      <label>◉ Max Intensity I₀</label>
      <input type="number" id="I0" value="1" step="0.1" min="0.1" max="5">
      <div class="info">// Brightness scale</div>
    </div>
  </div>

  <button class="simulate-btn" onclick="draw()">
    ▶ Execute Simulation
  </button>

  <div class="canvas-container">
    <div style="display: flex; justify-content: center; gap: 15px; margin-bottom: 15px;">
      <button class="zoom-btn" onclick="zoom(0.8)">− Zoom Out</button>
      <button class="zoom-btn" onclick="zoom(1.25)">+ Zoom In</button>
      <button class="zoom-btn" onclick="resetZoom()">⟲ Reset</button>
      <button class="zoom-btn" onclick="toggleGrid()">⊞ Grid</button>
    </div>
    <canvas id="canvas" width="800" height="400"></canvas>
    <div class="axis-label">[ θ: Angle (°) | I: Intensity ]</div>
  </div>
</div>

<script>
let currentMode = 'single';
let zoomLevel = 1;
let showGrid = true;

function setMode(mode) {
  currentMode = mode;
  
  const buttons = document.querySelectorAll('.mode-btn');
  buttons.forEach((btn, idx) => {
    if ((mode === 'single' && idx === 0) || (mode === 'double' && idx === 1)) {
      btn.classList.add('active');
    } else {
      btn.classList.remove('active');
    }
  });
  
  const singleA = document.getElementById('singleSlitA');
  const doubleA = document.getElementById('doubleSlitA');
  const separation = document.getElementById('slitSeparation');
  
  if (mode === 'single') {
    singleA.classList.remove('hidden');
    doubleA.classList.add('hidden');
    separation.classList.add('hidden');
  } else {
    singleA.classList.add('hidden');
    doubleA.classList.remove('hidden');
    separation.classList.remove('hidden');
  }
  
  draw();
}

function zoom(factor) {
  zoomLevel *= factor;
  zoomLevel = Math.max(0.5, Math.min(zoomLevel, 5));
  draw();
}

function resetZoom() {
  zoomLevel = 1;
  draw();
}

function toggleGrid() {
  showGrid = !showGrid;
  draw();
}

function drawAxes(ctx, width, height, centerY) {
  // Draw grid if enabled
  if (showGrid) {
    ctx.strokeStyle = 'rgba(0, 255, 255, 0.1)';
    ctx.lineWidth = 1;
    
    // Vertical grid lines
    for (let i = 0; i <= 20; i++) {
      const x = (i / 20) * width;
      ctx.beginPath();
      ctx.moveTo(x, 0);
      ctx.lineTo(x, height);
      ctx.stroke();
    }
    
    // Horizontal grid lines
    for (let i = 0; i <= 10; i++) {
      const y = (i / 10) * height;
      ctx.beginPath();
      ctx.moveTo(0, y);
      ctx.lineTo(width, y);
      ctx.stroke();
    }
  }

  // Draw X-axis
  ctx.strokeStyle = 'rgba(0, 255, 255, 0.6)';
  ctx.lineWidth = 2;
  ctx.beginPath();
  ctx.moveTo(0, centerY);
  ctx.lineTo(width, centerY);
  ctx.stroke();

  // Draw Y-axis
  ctx.beginPath();
  ctx.moveTo(width / 2, 0);
  ctx.lineTo(width / 2, height);
  ctx.stroke();

  // X-axis labels (more detailed based on zoom)
  ctx.fillStyle = '#00ffff';
  ctx.font = 'bold 10px Courier New';
  ctx.textAlign = 'center';
  
  const angleRange = 180 / zoomLevel;
  const angleStep = angleRange > 90 ? 30 : angleRange > 45 ? 15 : angleRange > 20 ? 5 : 2;
  
  for (let angle = -90; angle <= 90; angle += angleStep) {
    if (angle >= -angleRange/2 && angle <= angleRange/2) {
      const normalizedAngle = angle / (angleRange / 2);
      const x = width / 2 + (normalizedAngle * width / 2);
      
      if (x >= 0 && x <= width) {
        ctx.fillText(angle + '°', x, centerY + 18);
        
        ctx.strokeStyle = 'rgba(0, 255, 255, 0.4)';
        ctx.lineWidth = angle % (angleStep * 2) === 0 ? 2 : 1;
        ctx.beginPath();
        ctx.moveTo(x, centerY - 7);
        ctx.lineTo(x, centerY + 7);
        ctx.stroke();
      }
    }
  }

  // Y-axis labels (more detailed)
  ctx.textAlign = 'right';
  ctx.fillStyle = '#00ff9d';
  ctx.font = 'bold 10px Courier New';
  
  for (let i = 0; i <= 10; i++) {
    const intensity = i / 10;
    const y = centerY - (intensity * height * 0.45);
    
    if (intensity > 0 && y >= 10 && y <= height - 10) {
      ctx.fillText(intensity.toFixed(1), width / 2 - 12, y + 4);
      
      ctx.strokeStyle = 'rgba(0, 255, 157, 0.3)';
      ctx.lineWidth = intensity % 0.25 === 0 ? 2 : 1;
      ctx.beginPath();
      ctx.moveTo(width / 2 - 7, y);
      ctx.lineTo(width / 2 + 7, y);
      ctx.stroke();
    }
  }

  // Axis labels with glow
  ctx.fillStyle = '#00ffff';
  ctx.font = 'bold 16px Courier New';
  ctx.textAlign = 'center';
  ctx.shadowColor = '#00ffff';
  ctx.shadowBlur = 10;
  ctx.fillText('θ', width - 25, centerY - 15);
  ctx.fillText('I', width / 2 + 25, 20);
  ctx.shadowBlur = 0;
  
  // Zoom indicator
  ctx.fillStyle = '#00ff9d';
  ctx.font = 'bold 11px Courier New';
  ctx.textAlign = 'left';
  ctx.fillText('ZOOM: ' + zoomLevel.toFixed(1) + 'x', 10, 20);
}

function draw() {
  const canvas = document.getElementById("canvas");
  const ctx = canvas.getContext("2d");
  
  const lambda = parseFloat(document.getElementById("lambda").value);
  const I0 = parseFloat(document.getElementById("I0").value);

  ctx.clearRect(0, 0, canvas.width, canvas.height);

  const width = canvas.width;
  const height = canvas.height;
  const centerY = height / 2;

  if (currentMode === 'single') {
    drawSingleSlit(ctx, width, height, centerY, lambda, I0);
  } else {
    drawDoubleSlit(ctx, width, height, centerY, lambda, I0);
  }
}

function drawSingleSlit(ctx, width, height, centerY, lambda, I0) {
  const a = parseFloat(document.getElementById("a").value);

  drawAxes(ctx, width, height, centerY);

  const angleRange = 90 / zoomLevel;

  for (let x = 0; x < width; x++) {
    let theta_deg = ((x / width) * 2 - 1) * angleRange;
    let theta_rad = theta_deg * Math.PI / 180;
    let beta = Math.PI * a * Math.sin(theta_rad) / lambda;

    let I;
    if (Math.abs(beta) < 1e-10) {
      I = I0;
    } else {
      I = I0 * Math.pow(Math.sin(beta) / beta, 2);
    }

    const lineHeight = I * height * 0.9;
    const brightness = Math.min(255, Math.floor(I * 255 / I0));
    
    ctx.beginPath();
    ctx.moveTo(x, centerY - lineHeight / 2);
    ctx.lineTo(x, centerY + lineHeight / 2);
    
    const cyan = Math.floor(brightness);
    const green = Math.floor(brightness * 0.9);
    ctx.strokeStyle = `rgb(0, ${cyan}, ${green})`;
    ctx.lineWidth = 1.5;
    ctx.stroke();
    
    // Enhanced glow effect
    if (brightness > 150) {
      ctx.strokeStyle = `rgba(0, 255, 255, ${(brightness - 150) / 255 * 0.8})`;
      ctx.lineWidth = 3;
      ctx.stroke();
    }
  }
}

function drawDoubleSlit(ctx, width, height, centerY, lambda, I0) {
  const a = parseFloat(document.getElementById("a_double").value);
  const d = parseFloat(document.getElementById("d").value);

  drawAxes(ctx, width, height, centerY);

  const angleRange = 90 / zoomLevel;

  for (let x = 0; x < width; x++) {
    let theta_deg = ((x / width) * 2 - 1) * angleRange;
    let theta_rad = theta_deg * Math.PI / 180;
    
    let beta = Math.PI * a * Math.sin(theta_rad) / lambda;
    let singleSlitFactor;
    if (Math.abs(beta) < 1e-10) {
      singleSlitFactor = 1;
    } else {
      singleSlitFactor = Math.pow(Math.sin(beta) / beta, 2);
    }

    let delta = Math.PI * d * Math.sin(theta_rad) / lambda;
    let interferenceFactor = Math.pow(Math.cos(delta), 2);

    let I = I0 * singleSlitFactor * interferenceFactor;

    const lineHeight = I * height * 0.9;
    const brightness = Math.min(255, Math.floor(I * 255 / I0));

    ctx.beginPath();
    ctx.moveTo(x, centerY - lineHeight / 2);
    ctx.lineTo(x, centerY + lineHeight / 2);
    
    const cyan = Math.floor(brightness);
    const green = Math.floor(brightness * 0.9);
    ctx.strokeStyle = `rgb(0, ${cyan}, ${green})`;
    ctx.lineWidth = 1.5;
    ctx.stroke();
    
    // Enhanced glow effect
    if (brightness > 150) {
      ctx.strokeStyle = `rgba(0, 255, 255, ${(brightness - 150) / 255 * 0.8})`;
      ctx.lineWidth = 3;
      ctx.stroke();
    }
  }
}

draw();
</script>

</body>
</html>
